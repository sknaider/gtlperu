---
import Container from "@components/container.astro";
import { Icon } from "astro-icon";

const { margin } = Astro.props;

const footermenu = {
  company: [
    {
      title: "About",
      path: "/about",
    },
    {
      title: "Careers",
      path: "#",
    },
    {
      title: "Blog",
      path: "/blog",
    },
    {
      title: "Contact",
      path: "/contact",
    },
  ],
  product: [
    {
      title: "For Startups",
      path: "#",
    },
    {
      title: "Features",
      path: "#",
    },
    {
      title: "Pricing",
      path: "/pricing",
    },
    {
      title: "Integrations",
      path: "#",
    },
  ],
  resources: [
    {
      title: "Help Center",
      path: "#",
    },
    {
      title: "Guides",
      path: "#",
    },
    {
      title: "Documentation",
      path: "#",
    },
    {
      title: "Uptime Status",
      path: "#",
    },
  ],
};
---

<footer
  class:list={[
    "py-14 bg-primary border-t border-slate-100",
    margin && "mt-10",
  ]}>
  <Container>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
      <div class="sm:col-span-2 md:col-span-3 lg:col-span-2">
        <div class="flex w-full lg:w-auto items-center justify-between my-10">
          <a
            href="/"
            class="text-lg flex items-center transition focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full px-2 -ml-2"
            ><span class="font-bold text-gray-900">Code</span><span
              class="text-overPrimary">mils</span
            >
            <span
              class="uppercase mt-0.5 leading-none text-[10px] ml-1 font-bold bg-gray-200 text-slate-700 px-2 py-1 rounded-md"
              >PRO</span
            >
          </a>
        </div>
        <p class="mt-4 text-sm text-overPrimary max-w-xs">
          Astroship Pro is a premium astro website template made for saas &
          startups. Built with Astro and Tailwind CSS.
        </p>
        <div class="flex gap-3 mt-4 items-center">
          <a
            href="https://twitter.com/surjithctly"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-default hover:bg-secondary rounded w-6 h-6 inline-flex items-center justify-center text-overPrimary">
            <Icon name="bx:bxl-twitter" class="w-4 h-4 text-default" />
            <span class="sr-only">Twitter or X</span></a
          >
          <a
            href="https://facebook.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-default hover:bg-secondary rounded w-6 h-6 inline-flex items-center justify-center text-overPrimary">
            <Icon
              name="bx:bxl-facebook-circle"
              class="w-4 h-4 text-default"
            /><span class="sr-only">Facebook</span></a
          >
          <a
            href="https://linkedin.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-default hover:bg-secondary rounded w-6 h-6 inline-flex items-center justify-center text-overPrimary">
            <Icon
              name="bx:bxl-linkedin-square"
              class="w-4 h-4 text-default"
            /><span class="sr-only">Linkedin</span></a
          >
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-overPrimary">Company</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.company.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-overPrimary hover:text-secondary">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-overPrimary">Product</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.product.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-overPrimary hover:text-secondary">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-overPrimary">Resources</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.resources.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-overPrimary hover:text-secondary">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </Container>

  <div class="mt-14 pt-8 px-5 border-t border-secondary">
    <Container>
      <p class="text-center text-sm text-slate-600 [text-wrap:balance]">
        Copyright © {new Date().getFullYear()} Codemils. All rights reserved.
      </p>
      <p class="text-center text-xs text-slate-600 mt-2">
        <a href="/terms" class="hover:text-secondary"> Terms</a> ・ <a
          href="/privacy"
          class="hover:text-secondary">
          Privacy</a
        >
      </p>
    </Container>
  </div>
</footer>
